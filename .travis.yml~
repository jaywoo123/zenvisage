branches:
  only:
  - master

language: node_js
node_js:
  - "8"
dist: trusty
sudo: required
before_install:
   - export DISPLAY=:99.0
   - sh -e /etc/init.d/xvfb start
   - sleep 3 # give xvfb some time to start
   - npm install -g protractor
   - webdriver-manager update
addons:
  chrome: stable


script: sh build.sh